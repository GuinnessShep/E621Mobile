<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="12dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_thumbnail"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/image_id"
        android:layout_toRightOf="@+id/image_thumbnail"
        android:layout_toEndOf="@+id/image_thumbnail"
        android:textColor="@color/lightGray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/image_tags"
        android:visibility="gone"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:layout_toEndOf="@+id/image_thumbnail"
        android:layout_toRightOf="@+id/image_thumbnail"
        android:layout_alignStart="@+id/image_id"
        android:layout_alignLeft="@+id/image_id"
        android:layout_below="@+id/image_id"/>

</RelativeLayout>